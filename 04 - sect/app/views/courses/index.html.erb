<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Instrutor</th>
      <th>Email</th>
      <th>Titulo</th>
      <th>Carga horaria</th>
      <th>Vagas</th>
      <th>Pre requisito</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.instrutor %></td>
        <td><%= course.email %></td>
        <td><%= course.titulo %></td>
        <td><%= course.carga_horaria %></td>
        <td><%= course.vagas %></td>
        <td><%= course.pre_requisito %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

